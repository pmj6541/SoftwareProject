<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/chatitem_linearlayout_main"
    >

    <LinearLayout

        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/chatitem_linearlayout_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_textview_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="이름"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                 />

            <TextView
                android:id="@+id/chat_textview_chatcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="17sp"
                android:text="메세지"
                android:background="@drawable/ic_chat_left_item"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/chat_item_textview_chattime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>